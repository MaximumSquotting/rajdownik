= form_for(registration) do |f|
  - if registration.errors.any?
    #error_explanation
      %h2
        = pluralize(registration.errors.count, "error")
        prohibited this registration from being saved:
      %ul
        - registration.errors.full_messages.each do |message|
          %li= message
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label "Student-id(index)"
    %br/
    = f.text_field :student_id
  %p
    = f.label :accepted
    %br/
    = f.check_box :accepted
  %p
    = f.label :paid
    %br/
    = f.check_box :paid
  %p
    = f.label :female_shirt
    %br/
    = f.check_box :female_shirt
  %p
    = f.label :attended
    %br/
    = f.check_box :attended
  %p
    = f.label :shirt_size
    %br/
    = f.text_field :shirt_size
  %p
    = f.label :phone_number
    %br/
    = f.text_field :phone_number
  %p
    = f.submit
%td= link_to 'Back', registrations_path()
