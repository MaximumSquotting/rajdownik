%p
  All rallies
  %td= link_to 'New', new_rally_path()
- @rally.each do |r|
  %tr
    %td= r.name
    %td= r.attendees_limit
    %td= r.start_date
    %td= r.end_date
    %td= link_to 'Show', rally_path(r)
    %td= link_to 'Edit', edit_rally_path(r)
    %td= link_to 'Destroy', rally_path(r),  |
        method: :delete,                   |
        data: { confirm: 'Are you sure?' } |
