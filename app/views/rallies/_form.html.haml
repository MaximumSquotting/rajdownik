= form_for(rally) do |f|
  - if rally.errors.any?
    #error_explanation
      %h2
        = pluralize(rally.errors.count, "error")
        prohibited this rally from being saved:
      %ul
        - rally.errors.full_messages.each do |message|
          %li= message
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :attendees_limit
    %br/
    = f.text_field :attendees_limit
  %p
    = f.label :start_date
    %br/
    = f.text_field :start_date
  %p
    = f.label :end_date
    %br/
    = f.text_field :end_date
  %p
    = f.label :end_date
    %br/
    = f.file_field :student_ids
  %p
    = f.submit
%td= link_to 'Back', rallies_path()
